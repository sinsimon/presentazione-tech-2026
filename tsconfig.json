{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components/index.ts"],
      "@components/*": ["components/*"],
      "@slides/*": ["slides/*"],
      "@presentations/*": ["presentations/*"],
      "@presentations": ["presentations/index.ts"]
    }
  },
  "include": ["src/**/*"]
}


